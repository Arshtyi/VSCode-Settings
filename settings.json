    // =========================================================================
    // C/C++ Settings
    // =========================================================================
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true, // Show auto declaration types on left
    "C_Cpp.vcFormat.space.afterCastCloseParenthesis": true, // Space after cast close parenthesis
    "C_Cpp.vcFormat.space.beforeComma": true, // Space before comma
    "C_Cpp.vcFormat.space.beforeEmptySquareBrackets": true, // Space before empty square brackets
    "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "insert", // Insert space before function parenthesis
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true, // Space before initializer list brace
    "C_Cpp.vcFormat.space.beforeLambdaOpenParenthesis": true, // Space before lambda parenthesis
    "C_Cpp.vcFormat.space.beforeOpenSquareBracket": true, // Space before open square bracket
    "C_Cpp.vcFormat.space.betweenEmptyBraces": true, // Space between empty braces
    "C_Cpp.vcFormat.space.betweenEmptyLambdaBrackets": true, // Space between empty lambda brackets
    "C_Cpp.vcFormat.space.betweenEmptyParameterListParentheses": true, // Space between empty parameter list parentheses
    "C_Cpp.vcFormat.space.betweenEmptySquareBrackets": true, // Space between empty square brackets
    "C_Cpp.vcFormat.space.insertAfterSemicolon": true, // Insert space after semicolon
    "C_Cpp.vcFormat.space.withinCastParentheses": true, // Space within cast parentheses
    "C_Cpp.vcFormat.space.withinControlFlowStatementParentheses": true, // Space within control flow statement parentheses
    "C_Cpp.vcFormat.space.withinExpressionParentheses": true, // Space within expression parentheses
    "C_Cpp.vcFormat.space.withinLambdaBrackets": true, // Space within lambda brackets
    "C_Cpp.vcFormat.space.withinParameterListParentheses": true, // Space within parameter list parentheses
    "C_Cpp.vcFormat.space.withinSquareBrackets": true, // Space within square brackets
    "C_Cpp.intelliSenseEngine": "default", // IntelliSense engine
    "C_Cpp.formatting": "clangFormat", // Formatting tool
    "C_Cpp.default.configurationProvider": "ms-vscode.cpptools", // Default configuration provider
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true, // Enable auto declaration types
    "C_Cpp.inlayHints.parameterNames.enabled": true, // Enable parameter names
    "C_Cpp.inlayHints.referenceOperator.enabled": true, // Enable reference operator
    "C_Cpp.inlayHints.referenceOperator.showSpace": true, // Show space after reference operator
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine", // New line before block open brace
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine", // New line before function open brace
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine", // Same line for lambda open brace
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine", // New line before namespace open brace
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine", // Same line for type open brace
    "C_Cpp.vcFormat.newLine.beforeWhileInDoWhile": true, // New line before while in do-while
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true, // Same line for empty function close brace
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true, // Same line for empty type close brace
    "C_Cpp.copilotHover": "enabled", // Enable Copilot hover

    // =========================================================================
    // CSS Settings
    // =========================================================================
    "css.format.spaceAroundSelectorSeparator": true, // Space around selector separator

    // =========================================================================
    // LaTeX Settings
    // =========================================================================
    "latex-workshop.latex.autoBuild.run": "never", // Don't auto-build LaTeX documents
    "latex-workshop.showContextMenu": true, // Show context menu
    "latex-workshop.intellisense.package.enabled": true, // Enable package intellisense
    "latex-workshop.message.error.show": false, // Don't show error messages
    "latex-workshop.message.warning.show": false, // Don't show warning messages
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOCFILE%"]
        }
    ], // LaTeX compilation tools
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeX",
            "tools": ["xelatex"]
        },
        {
            "name": "XeLaTeX^2",
            "tools": ["xelatex", "xelatex"]
        },
        {
            "name": "PDFLaTeX",
            "tools": ["pdflatex"]
        },
        {
            "name": "BibTeX",
            "tools": ["bibtex"]
        },
        {
            "name": "LaTeXmk",
            "tools": ["latexmk"]
        },
        {
            "name": "XeLaTeX -> BibTeX -> XeLaTeX^2",
            "tools": ["xelatex", "bibtex", "xelatex", "xelatex"]
        },
        {
            "name": "XeLaTeX -> Biber -> XeLaTeX^2",
            "tools": ["xelatex", "biber", "xelatex", "xelatex"]
        },
        {
            "name": "PDFLaTeX -> BibTeX -> PDFLaTeX^2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        }
    ], // LaTeX compilation recipes
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk"
    ], // Files to clean
    "latex-workshop.latex.autoClean.run": "onFailed", // Clean auxiliary files on failed builds
    "latex-workshop.latex.recipe.default": "lastUsed", // Use last used recipe
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click", // Double-click for SyncTeX
    "latex-workshop.view.pdf.ref.viewer": "auto", // Auto reference viewer
    "latex-workshop.latex.outDir": "%DIR%", // Output directory
    "latex-workshop.view.pdf.viewer": "external", // External PDF viewer
    "latex-workshop.view.pdf.external.viewer.command": "okular", // External viewer command
    "latex-workshop.view.pdf.external.viewer.args": ["--unique", "%PDF%"],
    "latex-workshop.view.pdf.external.synctex.command": "okular", // External SyncTeX command
    "latex-workshop.view.pdf.external.synctex.args": [
        "--unique",
        "%PDF%#src:%LINE%%TEX%"
    ], // External SyncTeX arguments
    "latex-workshop.formatting.latex": "latexindent", // Formatting tool
    "latex-workshop.formatting.latexindent.path": "/usr/local/texlive/2025/bin/x86_64-linux/latexindent", // Path to latexindent
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y=defaultIndent:'    '",
        "-l",
        "%WORKSPACE_FOLDER%/.latexindent.yaml",
        "-m",
        "-g=/dev/null"
    ], // latexindent arguments

