{
    // =========================================================================
    // VSCode Basic UI & Window Settings
    // =========================================================================
    "window.newWindowProfile": "默认", // Profile to use for new windows
    "window.dialogStyle": "custom", // Custom dialog style for windows
    "window.restoreFullscreen": true, // Restore fullscreen on launch

    // =========================================================================
    // Workbench & Appearance
    // =========================================================================
    "workbench.iconTheme": "material-icon-theme", // Icon theme for file explorer
    "workbench.productIconTheme": "bongocat", // Product icon theme
    "workbench.colorTheme": "Winter is Coming (Dark Blue)", // Color theme
    "workbench.list.smoothScrolling": true, // Smooth scrolling for lists
    "workbench.list.horizontalScrolling": true, // Enable horizontal scrolling in lists
    "workbench.tree.indent": 40, // Indent width in tree explorer
    "workbench.tree.renderIndentGuides": "always", // Show indent guides in explorer
    "workbench.tree.stickyScrollMaxItemCount": 10, // Max sticky scroll items in tree view
    "workbench.editor.wrapTabs": true, // Wrap tabs in editor
    "workbench.editor.showTabs": "multiple", // Show tabs when multiple editors are open
    "workbench.startupEditor": "none", // No welcome/startup editor
    "workbench.editor.highlightModifiedTabs": true, // Highlight modified tabs
    "workbench.editor.scrollToSwitchTabs": true, // Scroll to tab on switching
    "workbench.editor.pinnedTabsOnSeparateRow": true, // Show pinned tabs on separate row
    "workbench.editor.preferHistoryBasedLanguageDetection": true, // Prefer history for language detection
    "workbench.editor.sharedViewState": true, // Share editor view state between editors
    "workbench.editor.definitionLinkOpensInPeek": true, // Open definitions in peek view
    "workbench.experimental.cloudChanges.partialMatches.enabled": true, // Enable cloud changes partial matches
    "workbench.settings.showAISearchToggle": true, // Show AI search toggle in settings
    "workbench.settings.applyToAllProfiles": [
        "editor.fontFamily",
        "workbench.list.horizontalScrolling"
    ], // Settings applied to all user profiles
    "workbench.commandPalette.preserveInput": true, // Preserve input in command palette

    // =========================================================================
    // Files & Explorer
    // =========================================================================
    "files.associations": {
        "*.vue": "vue",
        "*.wpy": "vue",
        "*.wxml": "html",
        "*.wxss": "css"
    }, // File extension to language associations
    "files.autoSave": "onFocusChange", // Auto save on focus change
    "files.autoSaveDelay": 200, // Delay for auto save in ms
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }, // Exclude JS files if TS exists
        "**/node_modules": true
    }, // Exclude files/folders from explorer
    "files.insertFinalNewline": true, // Insert newline at end of file on save
    "files.trimFinalNewlines": true, // Trim final newlines on save
    "files.trimTrailingWhitespace": true, // Trim trailing whitespace on save
    "explorer.confirmDelete": false, // No confirm on delete
    "explorer.compactFolders": true, // Collapse single-child folders
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    }, // File nesting patterns in explorer

    // =========================================================================
    // Editor Settings
    // =========================================================================
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Default formatter extension
    "editor.fontSize": 14, // Default font size
    "editor.fontFamily": "'Fira Code','Maple Mono','Cousine Nerd Font','Hack NF','JetBrains Mono'", // Font family
    "editor.fontLigatures": true, // Enable font ligatures
    "editor.wordWrap": "on", // Enable word wrap
    "editor.detectIndentation": false, // Disable auto-indent detection
    "editor.tabSize": 4, // Tab size
    "editor.rulers": [], // No rulers
    "editor.renderControlCharacters": true, // Show control characters
    "editor.smoothScrolling": true, // Smooth scrolling
    "editor.cursorSmoothCaretAnimation": "on", // Smooth caret animation
    "editor.cursorBlinking": "smooth", // Smooth cursor blinking
    "editor.cursorStyle": "line", // Line cursor style
    "editor.guides.bracketPairs": "active", // Show active bracket pair guides
    "editor.mouseWheelZoom": true, // Enable zoom via mouse wheel
    "editor.renderWhitespace": "all", // Show all whitespace
    "editor.inlayHints.fontFamily": "", // Font for inlay hints (empty = default)
    "editor.minimap.renderCharacters": false, // Do not render actual characters in minimap
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    }, // Enable ESLint fixes on save
    "editor.formatOnSave": true, // Format file on save
    "editor.formatOnPaste": true, // Format on paste
    "editor.formatOnType": true, // Format on type
    "editor.inlineSuggest.edits.allowCodeShifting": "always", // Allow code shifting in inline suggestions
    "editor.inlineSuggest.edits.showCollapsed": true, // Show collapsed inline suggestions
    "editor.inlineCompletionsAccessibilityVerbose": true, // Verbose accessibility for inline completions
    "editor.inlayHints.padding": true, // Padding for inlay hints
    "editor.stickyTabStops": true, // Enable sticky tab stops
    "editor.stickyScroll.maxLineCount": 20, // Max lines for sticky scroll
    "editor.suggest.preview": true, // Preview suggestion in autocomplete
    "editor.foldingImportsByDefault": true, // Fold import statements by default
    "editor.tabCompletion": "on", // Enable tab completion

    // =========================================================================
    // Diff Editor Settings
    // =========================================================================
    "diffEditor.wordWrap": "on", // Enable word wrap in diff editor
    "diffEditor.maxComputationTime": 0, // No limit for diff computation time
    "diffEditor.codeLens": true, // Enable code lens in diff editor
    "diffEditor.hideUnchangedRegions.enabled": true, // Hide unchanged regions
    "diffEditor.experimental.showMoves": true, // Show code moves in diff
    "diffEditor.experimental.useTrueInlineView": true, // Use true inline view for diffs

    // =========================================================================
    // Search Settings
    // =========================================================================
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/target": true,
        "**/logs": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/.history": true,
        "**__pytcache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.vscode-test": true
    }, // Exclude patterns for search

    // =========================================================================
    // Terminal Settings
    // =========================================================================
    "terminal.integrated.smoothScrolling": true, // Smooth scrolling in terminal
    "terminal.integrated.commandsToSkipShell": ["matlab.interrupt"], // Commands skipped by shell
    "terminal.integrated.fontLigatures.enabled": true, // Enable font ligatures
    "terminal.integrated.fontFamily": "", // Terminal font family (empty = default)
    "terminal.integrated.inheritEnv": false, // Do not inherit environment variables
    "terminal.integrated.defaultProfile.linux": "zsh", // Default shell for Linux

    // =========================================================================
    // Git Settings
    // =========================================================================
    "git.enableSmartCommit": true, // Enable commit without staging
    "git.autofetch": true, // Auto fetch repositories
    "git.confirmSync": false, // Do not confirm sync
    "git.openRepositoryInParentFolders": "never", // Do not open repository in parent folders
    "git.ignoreWindowsGit27Warning": true, // Ignore Windows Git 2.7 warning
    "git.terminalAuthentication": false, // Disable terminal authentication
    "git.replaceTagsWhenPull": true, // Replace tags on pull

    // =========================================================================
    // GitLens Extension Settings
    // =========================================================================
    "gitlens.detectNestedRepositories": true, // Detect nested repositories

    // =========================================================================
    // GitHub Copilot & Chat Settings
    // =========================================================================
    "github.copilot.enable": {
        "markdown": true,
        "plaintext": true,
        "python": true,
        "typescript": true,
        "javascript": true,
        "html": true,
        "css": true,
        "json": true,
        "c": true,
        "cpp": true,
        "java": true,
        "php": true,
        "ruby": true,
        "go": true,
        "rust": true,
        "shell": true,
        "sql": true,
        "swift": true,
        "vue": true,
        "yaml": true
    }, // Enable Copilot for these languages
    "github.copilot.chat.scopeSelection": true, // Enable scope selection in chat
    "github.copilot.chat.editor.temporalContext.enabled": true, // Enable temporal context (editor)
    "github.copilot.chat.edits.temporalContext.enabled": true, // Enable temporal context (edits)
    "github.copilot.chat.generateTests.codeLens": true, // Enable generate tests CodeLens
    "github.copilot.chat.languageContext.typescript.enabled": true, // Enable TypeScript language context
    "github.copilot.nextEditSuggestions.enabled": true, // Enable next edit suggestions
    "github.copilot.chat.codesearch.enabled": true, // Enable code search in chat
    "github.copilot.nextEditSuggestions.fixes": true, // Enable next edit suggestion fixes
    "github.copilot.chat.languageContext.inline.typescript.enabled": true, // Enable inline TS context
    "github.copilot.chat.search.keywordSuggestions": true, // Enable keyword suggestions in chat
    "github.copilot.chat.agent.thinkingTool": true, // Enable thinking tool in chat
    "github.copilot.chat.languageContext.fix.typescript.enabled": true, // Enable TS context fixes

    // =========================================================================
    // GitHub Pull Requests Extension Settings
    // =========================================================================
    "githubPullRequests.experimental.chat": true, // Enable chat in PR extension
    "githubPullRequests.experimental.notificationsView": true, // Enable notifications view
    "githubPullRequests.experimental.useQuickChat": true, // Enable quick chat
    "githubPullRequests.pullRequestDescription": "Copilot", // Default PR description
    "githubPullRequests.createOnPublishBranch": "never", // Never create PR on publish branch

    // =========================================================================
    // Remote Development
    // =========================================================================
    "remote.SSH.remotePlatform": {
        "LinuxServer": "linux",
        "154.44.26.17": "linux"
    }, // Specify remote platforms for SSH
    "remote.extensionKind": {
        "GitHub.copilot": ["ui"],
        "GitHub.copilot-chat": ["ui"]
    }, // Specify extension kind for remote
    "remote.autoForwardPorts": false, // Disable auto-forwarding ports

    // =========================================================================
    // Editor Associations
    // =========================================================================
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "file:/**/*.xlsx": "default",
        "file:/**/*.csv": "default",
        "*.xlsx": "cweijan.officeViewer",
        "*.cdb": "sqlite-viewer.option",
        "*.md": "cweijan.markdownViewer.optional"
    }, // Editor associations for file types

    // =========================================================================
    // Emmet Settings
    // =========================================================================
    "emmet.triggerExpansionOnTab": true, // Expand Emmet abbreviation with Tab
    "emmet.showAbbreviationSuggestions": true, // Show abbreviation suggestions
    "emmet.showExpandedAbbreviation": "always", // Always show expanded abbreviation
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html",
        "wpy": "html"
    }, // Language mappings for Emmet

    // =========================================================================
    // Language Specific Settings
    // =========================================================================
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "[tex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.tabSize": 4
    },
    "[latex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.formatOnSave": true,
        "editor.suggestSelection": "recentlyUsedByPrefix"
    },
    "[typst]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[typst-code]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },

    // =========================================================================
    // CMake Extension Settings
    // =========================================================================
    "cmake.configureOnOpen": true, // Configure CMake on open
    "cmake.additionalCompilerSearchDirs": ["/usr/bin"], // Additional compiler search dirs
    "cmake.generator": "Ninja", // CMake generator
    "cmake.buildDirectory": "${workspaceFolder}/build", // Build directory
    "cmake.showNotAllDocumentsSavedQuestion": false, // Do not prompt on unsaved docs

    // =========================================================================
    // CodeSnap Extension Settings
    // =========================================================================
    "codesnap.backgroundColor": "#f2f2f2", // Background color for screenshots
    "codesnap.boxShadow": "5px 5px 60px 0px #888888", // Box shadow for screenshots
    "codesnap.containerPadding": "3em", // Container padding
    "codesnap.roundedCorners": true, // Rounded corners
    "codesnap.showWindowTitle": true, // Show window title
    "codesnap.showLineNumbers": true, // Show line numbers
    "codesnap.realLineNumbers": true, // Use real line numbers
    "codesnap.transparentBackground": false, // No transparent background
    "codesnap.target": "container", // Screenshot target

    // =========================================================================
    // C/C++ Extension Settings
    // =========================================================================
    "C_Cpp.intelliSenseEngine": "default", // IntelliSense engine
    "C_Cpp.formatting": "clangFormat", // Formatting tool
    "C_Cpp.default.configurationProvider": "ms-vscode.cpptools", // Config provider
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true, // Inlay for auto types
    "C_Cpp.inlayHints.parameterNames.enabled": true, // Inlay for parameter names
    "C_Cpp.inlayHints.referenceOperator.enabled": true, // Inlay for reference operator
    "C_Cpp.inlayHints.referenceOperator.showSpace": true, // Space after &
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true, // Show auto types on left
    "C_Cpp.copilotHover": "enabled", // Enable Copilot hover in C/C++
    // --- C/C++ Formatting Style ---
    "C_Cpp.vcFormat.space.afterCastCloseParenthesis": true,
    "C_Cpp.vcFormat.space.beforeComma": true,
    "C_Cpp.vcFormat.space.beforeEmptySquareBrackets": true,
    "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "insert",
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true,
    "C_Cpp.vcFormat.space.beforeLambdaOpenParenthesis": true,
    "C_Cpp.vcFormat.space.beforeOpenSquareBracket": true,
    "C_Cpp.vcFormat.space.betweenEmptyBraces": true,
    "C_Cpp.vcFormat.space.betweenEmptyLambdaBrackets": true,
    "C_Cpp.vcFormat.space.betweenEmptyParameterListParentheses": true,
    "C_Cpp.vcFormat.space.betweenEmptySquareBrackets": true,
    "C_Cpp.vcFormat.space.insertAfterSemicolon": true,
    "C_Cpp.vcFormat.space.withinCastParentheses": true,
    "C_Cpp.vcFormat.space.withinControlFlowStatementParentheses": true,
    "C_Cpp.vcFormat.space.withinExpressionParentheses": true,
    "C_Cpp.vcFormat.space.withinLambdaBrackets": true,
    "C_Cpp.vcFormat.space.withinParameterListParentheses": true,
    "C_Cpp.vcFormat.space.withinSquareBrackets": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeWhileInDoWhile": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,

    // =========================================================================
    // CSS Formatting
    // =========================================================================
    "css.format.spaceAroundSelectorSeparator": true, // Space around selector separator

    // =========================================================================
    // LaTeX Workshop Extension Settings
    // =========================================================================
    "latex-workshop.latex.autoBuild.run": "never", // Disable auto build
    "latex-workshop.showContextMenu": true, // Show context menu in LaTeX
    "latex-workshop.intellisense.package.enabled": true, // Enable package intellisense
    "latex-workshop.message.error.show": false, // Hide error messages
    "latex-workshop.message.warning.show": false, // Hide warning messages
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOCFILE%"]
        }
    ], // Tools for LaTeX compilation
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeX",
            "tools": ["xelatex"]
        },
        {
            "name": "XeLaTeX^2",
            "tools": ["xelatex", "xelatex"]
        },
        {
            "name": "PDFLaTeX",
            "tools": ["pdflatex"]
        },
        {
            "name": "BibTeX",
            "tools": ["bibtex"]
        },
        {
            "name": "LaTeXmk",
            "tools": ["latexmk"]
        },
        {
            "name": "XeLaTeX -> BibTeX -> XeLaTeX^2",
            "tools": ["xelatex", "bibtex", "xelatex", "xelatex"]
        },
        {
            "name": "XeLaTeX -> Biber -> XeLaTeX^2",
            "tools": ["xelatex", "biber", "xelatex", "xelatex"]
        },
        {
            "name": "PDFLaTeX -> BibTeX -> PDFLaTeX^2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        }
    ], // Compilation recipes for LaTeX
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz"
    ], // Auxiliary files to clean
    "latex-workshop.latex.autoClean.run": "onFailed", // Auto clean on build failure
    "latex-workshop.latex.recipe.default": "lastUsed", // Use last used recipe
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click", // PDF synctex keybinding
    "latex-workshop.view.pdf.ref.viewer": "auto", // Default PDF reference viewer
    "latex-workshop.latex.outDir": "%DIR%", // Output directory for LaTeX build
    "latex-workshop.view.pdf.viewer": "external", // External PDF viewer
    "latex-workshop.view.pdf.external.viewer.command": "okular", // External PDF viewer command
    "latex-workshop.view.pdf.external.viewer.args": ["--unique", "%PDF%"],
    "latex-workshop.view.pdf.external.synctex.command": "okular", // External SyncTeX command
    "latex-workshop.view.pdf.external.synctex.args": [
        "--unique",
        "%PDF%#src:%LINE%%TEX%"
    ], // Arguments for external SyncTeX
    "latex-workshop.formatting.latex": "latexindent", // Formatter for LaTeX
    "latex-workshop.formatting.latexindent.path": "/usr/local/texlive/2025/bin/x86_64-linux/latexindent", // Path to latexindent
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y=defaultIndent:'    '",
        "-l",
        "%WORKSPACE_FOLDER%/.latexindent.yaml",
        "-m",
        "-g=/dev/null"
    ], // Arguments for latexindent

    // =========================================================================
    // JavaScript & Node.js Settings
    // =========================================================================
    "debug.javascript.defaultRuntimeExecutable": {
        "pwa-node": "node"
    }, // Default Node.js runtime for debugging

    // =========================================================================
    // Python Extension Settings
    // =========================================================================
    "python.analysis.aiCodeActions": {
        "implementAbstractClasses": true
    }, // AI suggestions for abstract classes
    "python.analysis.autoFormatStrings": true, // Format strings automatically
    "python.analysis.inlayHints.callArgumentNames": "all", // Show all argument names
    "python.analysis.inlayHints.functionReturnTypes": true, // Show function return types
    "python.analysis.inlayHints.pytestParameters": true, // Show pytest parameter hints
    "python.analysis.inlayHints.variableTypes": true, // Show variable types
    "debugpy.debugJustMyCode": true, // Debug only user code
    "python.analysis.typeCheckingMode": "standard", // Standard type checking
    "python.analysis.autoImportCompletions": true, // Auto-import completions
    "python.analysis.completeFunctionParens": true, // Complete function parens

    // =========================================================================
    // Prettier Extension Settings
    // =========================================================================
    "prettier.tabWidth": 4, // Tab width for Prettier
    "prettier.useTabs": false, // Use spaces instead of tabs
    "prettier.proseWrap": "preserve", // Preserve prose wrap
    "prettier.bracketSameLine": true, // Brackets on same line
    "prettier.singleAttributePerLine": true, // One attribute per line

    // =========================================================================
    // CPH (Competitive Programming Helper) Extension
    // =========================================================================
    "cph.general.defaultLanguage": "cpp", // Default CPH language
    "cph.general.firstTime": false, // Mark CPH as initialized
    "cph.language.cpp.Args": "-std=c++17 -O2", // C++ compile args

    // =========================================================================
    // Java Extension Settings
    // =========================================================================
    "java.debug.settings.showStaticVariables": true, // Show static vars in Java debug
    "java.debug.settings.showQualifiedNames": true, // Show qualified names
    "java.format.settings.url": "/home/arshtyi/.vscode/extensions/redhat.java-1.41.1-win32-x64/formatters/eclipse-formatter.xml", // Java formatter config

    // =========================================================================
    // Typst & Tinymist Extension Settings
    // =========================================================================
    "tinymist.formatterMode": "typstyle", // Formatter mode for Typst
    "tinymist.formatterIndentSize": 4, // Indent size for Typst

    // =========================================================================
    // Miscellaneous
    // =========================================================================
    "backgroundCover.imagePath": "", // Custom background image path
    "backgroundCover.randomImageFolder": "f:\\pictures\\wallpaper", // Random image folder
    "masmtasm.ASM.emulator": "dosbox", // DOS emulator for ASM
    "masmtasm.ASM.assembler": "TASM", // ASM assembler
    "vsicons.dontShowNewVersionMessage": true, // Hide VSCode icons new version msg
    "vscode-office.openOutline": false, // Disable outline in Office extension
    "vscode-office.editorTheme": "Auto", // Auto theme for Office extension
    "chat.agent.enabled": true, // Enable chat agent
    "chat.editing.confirmEditRequestRetry": false, // No confirm on edit retry
    "chat.mcp.enabled": true, // Enable MCP (multi-chat processing?)
    "settingsSync.ignoredSettings": ["-C_Cpp.clang_format_path"], // Ignore clang_format_path in sync
    "redhat.telemetry.enabled": true, // Enable RedHat telemetry
    "editor.hover.enabled": false // Disable editor hover
}
