{
    // =========================================================================
    // VSCode Basic Settings
    // =========================================================================
    "window.newWindowProfile": "默认", // New window profile
    "files.associations": {
        "*.vue": "vue",
        "*.wpy": "vue",
        "*.wxml": "html",
        "*.wxss": "css"
    }, // File associations
    "workbench.list.smoothScrolling": true, // Smooth scrolling for lists
    "workbench.iconTheme": "material-icon-theme", // File icons theme
    "terminal.integrated.smoothScrolling": true, // Smooth scrolling for terminal
    "files.autoSave": "onFocusChange", // Auto save when focus changes
    "files.autoSaveDelay": 200, // Auto save delay
    "workbench.productIconTheme": "bongocat", // Product icons theme
    "workbench.colorTheme": "Shades of Purple (Super Dark)", // Color theme
    "workbench.tree.stickyScrollMaxItemCount": 10, // Max sticky scroll items
    "debug.onTaskErrors": "debugAnyway", // Debug anyway when task errors
    "security.workspace.trust.untrustedFiles": "open", // Open untrusted files
    "window.dialogStyle": "custom", // Custom dialog style
    "workbench.editor.wrapTabs": true, // Wrap tabs
    "workbench.tree.indent": 40, // Tree indent
    "workbench.tree.renderIndentGuides": "always", // Always show indent guides
    "workbench.editor.showTabs": "multiple", // Show tabs when multiple
    "workbench.startupEditor": "none", // Disable startup editor
    "update.showReleaseNotes": false, // Don't show release notes
    "workbench.settings.applyToAllProfiles": [
        "editor.fontFamily",
        "workbench.list.horizontalScrolling"
    ], // Settings applied to all profiles
    "workbench.list.horizontalScrolling": true, // Horizontal scrolling for lists
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "file:/**/*.xlsx": "default",
        "file:/**/*.csv": "default",
        "*.xlsx": "cweijan.officeViewer",
        "*.cdb": "sqlite-viewer.option",
        "*.md": "cweijan.markdownViewer.optional"
    }, // Editor associations

    // =========================================================================
    // Git Settings
    // =========================================================================
    "git.enableSmartCommit": true, // Commit directly without staging
    "git.autofetch": true, // Auto fetch
    "git.confirmSync": false, // Don't prompt for confirmation on sync
    "git.openRepositoryInParentFolders": "never", // Don't open repository in parent folders
    "git.ignoreWindowsGit27Warning": true, // Ignore Git 2.7 warning on Windows
    "git.terminalAuthentication": false, // Disable terminal authentication
    "git.replaceTagsWhenPull": true, // Replace tags when pulling

    // =========================================================================
    // Emmet Settings
    // =========================================================================
    "emmet.triggerExpansionOnTab": true, // Expand abbreviations with Tab
    "emmet.showAbbreviationSuggestions": true, // Show abbreviation suggestions
    "emmet.showExpandedAbbreviation": "always", // Always show expanded abbreviation
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html",
        "wpy": "html"
    }, // Include languages

    // =========================================================================
    // Terminal Settings
    // =========================================================================
    "terminal.integrated.commandsToSkipShell": ["matlab.interrupt"],
    "terminal.integrated.fontLigatures.enabled": true, // Enable font ligatures in terminal
    "terminal.integrated.fontFamily": "", // Terminal font family
    "terminal.integrated.inheritEnv": false, // Don't inherit environment variables
    "terminal.integrated.defaultProfile.linux": "zsh", // Default terminal on Linux

    // =========================================================================
    // Explorer Settings
    // =========================================================================
    "explorer.confirmDelete": false, // Don't confirm delete
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts" // Hide JS files generated from TS
        },
        "**/node_modules": true
    }, // Files to exclude
    "explorer.compactFolders": true, // Compact folders with single child
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    }, // File nesting patterns

    // =========================================================================
    // Editor Settings
    // =========================================================================
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Default formatter
    "editor.fontSize": 14, // Font size
    "editor.wordWrap": "on", // Word wrap
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // Independent colors for bracket types
    "editor.fontLigatures": true, // Font ligatures
    "editor.formatOnSave": true, // Format on save
    "editor.fontFamily": "'Fira Code','Maple Mono','Cousine Nerd Font','Hack NF','JetBrains Mono'", // Font family
    "editor.detectIndentation": false, // Don't auto-detect indentation
    "editor.tabSize": 4, // Tab size
    "editor.rulers": [], // No rulers
    "editor.renderControlCharacters": true, // Show control characters
    "editor.smoothScrolling": true, // Smooth scrolling
    "editor.cursorSmoothCaretAnimation": "on", // Cursor animation
    "editor.stickyScroll.maxLineCount": 20, // Max sticky scroll lines
    "diffEditor.wordWrap": "on", // Diff editor word wrap
    "editor.cursorBlinking": "smooth", // Smooth cursor blinking
    "editor.cursorStyle": "line", // Line cursor style
    "editor.guides.bracketPairs": "active", // Active bracket pair guides
    "editor.mouseWheelZoom": true, // Mouse wheel zoom
    "editor.renderWhitespace": "all", // Show all whitespace
    "diffEditor.maxComputationTime": 0, // No limit on diff computation time
    "editor.inlayHints.fontFamily": "", // Inlay hints font family
    "editor.minimap.renderCharacters": false, // Don't render actual characters in minimap
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    }, // Code actions on save
    "editor.formatOnPaste": true, // Format on paste
    "editor.formatOnType": true, // Format on type
    "editor.inlineSuggest.edits.allowCodeShifting": "always", // Allow code shifting
    "editor.definitionLinkOpensInPeek": true, // Open definition links in peek view
    "editor.foldingImportsByDefault": true, // Fold imports by default
    "editor.inlineCompletionsAccessibilityVerbose": true, // Verbose inline completion accessibility
    "editor.inlayHints.padding": true, // Pad inlay hints
    "editor.stickyTabStops": true, // Sticky tab stops
    "editor.suggest.preview": true, // Preview suggestions

